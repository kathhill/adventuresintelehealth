---
import CollectionLayout from "@components/gallery/CollectionLayout.astro";
import { getEntries } from "@lib/contentParser";
import { sortByDate } from "@lib/sortFunctions";
import type { GalleryEntry } from "@/types";
import { getIndex } from "@lib/contentParser";

const entryIndex = (await getIndex("gallery")) as GalleryEntry;
const entries = (await getEntries("gallery", sortByDate)) as GalleryEntry[];
---

<CollectionLayout entryIndex={entryIndex} entries={entries} />
